    {
        if (string.IsNullOrWhiteSpace(e.Value?.ToString()))
        {
            date1 = null;
        }
    }

    private async Task Buscar()
    {
        Console.WriteLine("???");
        nombre = nombreUs;
        nInven = nInvenStr;
        date = date1;
        StateHasChanged();
